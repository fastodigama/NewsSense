doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    script(src="https://cdn.tailwindcss.com")
    link(rel="stylesheet", href="/css/style.css")
    title NewsSense

body(class="bg-gray-100 text-gray-900")
  //  Header & Navigation
  header(class="bg-white shadow p-4 border-b border-gray-200")
    nav(class="flex items-center justify-between")
      // Site Name on the left
      a(href="/" class="text-2xl font-bold text-blue-600") NS.

      // Navigation links in the center
      ul(class="flex space-x-6 mx-auto")
        li: a(href="/" class="text-blue-600 hover:underline") Home
        li: a(href="#politics" class="hover:underline") Politics
        li: a(href="#technology" class="hover:underline") Technology
        li: a(href="#world" class="hover:underline") World
        li: a(href="#business" class="hover:underline") Business
        li: a(href="#health" class="hover:underline") Health
        li: a(href="#entertainment" class="hover:underline") Entertainment
        li: a(href="#sports" class="hover:underline") Sports
        li: a(href="#science" class="hover:underline") Science
        

  //  Main Layout 
  .layout.w-full.px-6.py-6.mt-10.grid.grid-cols-12.gap-6
    aside.left-sidebar.col-span-3.bg-white.p-6.rounded.shadow
      block left

    main.content.col-span-6.bg-white.p-6.rounded.shadow
      block main

    aside.right-sidebar.col-span-3.bg-white.p-6.rounded.shadow
      block right

  //  Footer
  footer(class="bg-gray-800 mt-10 py-4 text-center text-sm text-gray-200")
    p Â© #{year} NewsSense. All rights reserved.

