extends layout

block main
  if articles && articles.length > 0
    - const featured = articles[0]
    article(class="mb-8 bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-transform duration-300 ")
      a(href=featured.url target="_blank" rel="noopener noreferrer")
        div(class="w-full h-64 md:h-96 overflow-hidden")
          img(class="w-full h-full object-cover", 
              src=featured.urlToImage || 'https://placehold.co/800x450/E2E8F0/1A202C?text=No+Image', 
              alt=featured.title)
      div(class="p-6")
        div(class="flex items-center mb-2")
          span(class="text-sm font-semibold text-blue-600")= featured.source.name
          span(class="mx-2 text-gray-400") â€¢ 
          span(class="text-sm text-gray-500")= featured.formattedDate
        h2(class="text-2xl font-bold mb-3 hover:text-blue-600 transition-colors")
          a(href=featured.url target="_blank" rel="noopener noreferrer")= featured.title
        p(class="text-gray-600 mb-4")= featured.description
        a(href=featured.url target="_blank" rel="noopener noreferrer" 
          class="inline-flex items-center text-blue-600 hover:underline")
          | Read full story
          svg(class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3")
        // Buttons below article content
        div(class="px-3 pb-3 flex flex-row space-x-2")
          button(class="bg-blue-600 text-white text-xs px-3 py-1 rounded hover:bg-blue-700 transition" data-action="summarize" data-url=featured.url) Summarize
          button(class="bg-green-600 text-white text-xs px-3 py-1 rounded hover:bg-green-700 transition" data-action="explain" data-url=featured.url) Explain Like I'm 5
          button(class="bg-purple-600 text-white text-xs px-3 py-1 rounded hover:bg-purple-700 transition" data-action="ask" data-url=featured.url) Ask Questions

block right
  if articles && articles.length > 1
    div(class="sticky top-4")
      h3(class="text-xl font-bold text-gray-800 mb-4 pb-2 border-b") Latest Headlines
      div(class="space-y-4")
        each a, index in articles.slice(1, 6)
          article(class="group")
            a(href=a.url target="_blank" rel="noopener noreferrer" class="block")
              div(class="flex gap-3")
                div(class="flex-shrink-0 w-20 h-20 overflow-hidden rounded-lg")
                  img(class="object-cover w-full h-full", 
                      src=a.urlToImage || 'https://placehold.co/200x200/E2E8F0/1A202C?text=NS', 
                      alt=a.title)
                div
                  p(class="text-sm text-gray-500")= a.formattedDate
                  h4(class="font-medium text-gray-900 group-hover:text-blue-600 transition-colors")= a.title
            // Buttons below article content
            div(class="p-3 flex flex-row space-x-2")
              button(class="bg-blue-600 text-white text-xs px-3 py-1 rounded hover:bg-blue-700 transition" data-action="summarize" data-url=a.url) Summarize
              button(class="bg-green-600 text-white text-xs px-3 py-1 rounded hover:bg-green-700 transition" data-action="explain" data-url=a.url) Explain Like I'm 5
              button(class="bg-purple-600 text-white text-xs px-3 py-1 rounded hover:bg-purple-700 transition" data-action="ask" data-url=a.url) Ask Questions